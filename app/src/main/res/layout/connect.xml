<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <AutoCompleteTextView
        android:id="@+id/ipAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Eg:192.168.43.53"
        android:inputType="number|numberDecimal"
        android:digits="0123456789."
        android:layout_marginBottom="134dp"
        android:layout_above="@+id/port"
        android:text="192.168.43.53"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Eg: 8080"
        android:text="8080"
        android:inputType="number"
        android:layout_marginBottom="115dp"
        android:layout_alignBottom="@+id/btnConnect"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:focusable="false"
        android:text="Connect"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ipAddress"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:text="IP Address  to connect to Drone" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/port"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:text="Port number to cinnect to Drone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Smart Drone"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_text_horizontal_margin" />
</RelativeLayout>